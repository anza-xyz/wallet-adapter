{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/**/*",
    "contents/**/*",
    "background/**/*",
    "popup/**/*",
    "options/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".plasmo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "lib/cjs",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo-cjs",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "types": [
      "chrome",
      "node",
      "react",
      "react-dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "~background/*": ["./background/*"],
      "~contents/*": ["./contents/*"],
      "~popup/*": ["./popup/*"],
      "~options/*": ["./options/*"]
    }
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}